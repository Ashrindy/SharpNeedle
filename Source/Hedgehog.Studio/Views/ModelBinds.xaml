<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:models="clr-namespace:SharpNeedle.Studio.Models"
                    xmlns:views="clr-namespace:SharpNeedle.Studio.Views">

    <DataTemplate DataType="{x:Type models:FolderBrowserViewModel}">
        <views:FolderBrowserView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type models:LightEditorViewModel}">
        <views:LightEditorView/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type models:MainViewModel}">
        <views:MainView/>
    </DataTemplate>
</ResourceDictionary>